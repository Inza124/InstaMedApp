@model InstaMedData.Models.Morf

@{
    ViewData["Title"] = "Morf";
}

<h2>Badanie Morfologia</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Pracownik zatwierdzający badanie:
                <input asp-for="DocName" class="form-control" />
                <span asp-validation-for="DocName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RBCResult" class="control-label"></label>
                <input asp-for="RBCResult" class="form-control" />
                <span asp-validation-for="RBCResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WBCResult" class="control-label"></label>
                <input asp-for="WBCResult" class="form-control" />
                <span asp-validation-for="WBCResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HBResult" class="control-label"></label>
                <input asp-for="HBResult" class="form-control" />
                <span asp-validation-for="HBResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HTResult" class="control-label"></label>
                <input asp-for="HTResult" class="form-control" />
                <span asp-validation-for="HTResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MCVResult" class="control-label"></label>
                <input asp-for="MCVResult" class="form-control" />
                <span asp-validation-for="MCVResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MCHResult" class="control-label"></label>
                <input asp-for="MCHResult" class="form-control" />
                <span asp-validation-for="MCHResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MCHCResult" class="control-label"></label>
                <input asp-for="MCHCResult" class="form-control" />
                <span asp-validation-for="MCHCResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plt" class="control-label"></label>
                <input asp-for="Plt" class="form-control" />
                <span asp-validation-for="Plt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="isMorf" /> Czy badanie zostało wykonane poprawnie?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wracaj do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
