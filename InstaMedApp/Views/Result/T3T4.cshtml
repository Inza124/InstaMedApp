@model InstaMedData.Models.T3T4

@{
    ViewData["Title"] = "T3T4";
}

<h2>Wynik T3/T4</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Wynik pomiaru T3:
                <input asp-for="T3Result" class="form-control" />
                <span asp-validation-for="T3Result" class="text-danger"></span>
            </div>
            <div class="form-group">
                Wynik pomiaru T4:
                <input asp-for="T4Result" class="form-control" />
                <span asp-validation-for="T4Result" class="text-danger"></span>
            </div>
            <div class="form-group">
                Pracownik zatwierdzający badanie:
                <input asp-for="DocName" class="form-control" />
                <span asp-validation-for="DocName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="isT3T4" /> Czy badanie zostało wykonane poprawnie?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
